.photo-container {
  width: 100%;
  height: 100vh;
  background: #fff;
}

.photo-header {
  height: 70rpx;
}

.photo-navbar{
  display: flex;
  position: fixed;
  z-index: 10;
  top: 0;
  width: 100%;
  height: 70rpx;
}
.navbar-card{
  flex: 1;
  text-align: center;
  font-size: 15px;
  height: 100%;
  transition: .5s linear;
}

.navbar-card-active{
  font-weight: 500;
  color: #FFA500;
}

.navbar__slider{
  position:absolute;
  content:" ";
  left:0;
  bottom:0;
  width:33%;
  height:4rpx;
  background-color:#FFA500;
  transition:transform .3s;
  box-shadow: 0 4prx 0 #FFA500;
}

.photo-content {
  height: calc(100% - 70rpx);
  text-align: center;
}
.latest-item-container{
  height: 100%;
  overflow-x: hidden;
  overflow-y: scroll;
}
.photo-list-view{
  display: inline-block;
  width: 100%;
  height: auto;
  overflow: hidden;
}
.photo-img {
  width: 100%;
  height: auto;
}