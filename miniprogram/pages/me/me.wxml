<!--miniprogram/pages/me/me.wxml-->
<view class="wrapper">

  <!-- 个人信息 -->
  <view class="card profile">
    <view class="info">
      <view class="avatar">
        <open-data type="userAvatarUrl"></open-data>
      </view>
      <view class="text">
        <open-data class="nick" type="userNickName"></open-data>
      </view>
    </view>
  </view>

  <view class="card items">
    <view class='item' hover-class='hover-class' catchtap='navigatItem' data-url='/pages/readHistory/readHistory'>
      <view class='title'>
        <image src='/images/view.png'></image>
        <view>阅读过的文章</view>
      </view>
      <view class='count'>{{0}}篇</view>
    </view>
  </view>


</view>